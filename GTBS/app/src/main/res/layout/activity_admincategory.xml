<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admincategory">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/slogan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/bungee"
            android:text="Add New Product"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/linear1_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slogan_category"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/action"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/action" />

            <ImageView
                android:id="@+id/adventure"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/adventure" />

            <ImageView
                android:id="@+id/rpg"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/rpggenre" />


        </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/racing"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/racing" />

        <ImageView
            android:id="@+id/strategy"
            android:layout_width="115dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/strategy"
            />

        <ImageView
            android:id="@+id/horror"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/horror"
            />



    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/mobilegames"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/mobilegames"
            />

        <ImageView
            android:id="@+id/giftcards"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/giftcards"
            android:layout_marginStart="16dp"
            />

        <ImageView
            android:id="@+id/valorant"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/valorant"
            />



    </LinearLayout>
        <LinearLayout
            android:id="@+id/linear4_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear3_category_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="45dp">
            <ImageView
                android:id="@+id/genshinimpact"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/genshinimpact"
                />

            <ImageView
                android:id="@+id/pubg"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/pubg"
                />

            <ImageView
                android:id="@+id/freefire"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/freefire"
                android:layout_marginStart="16dp"
                />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>